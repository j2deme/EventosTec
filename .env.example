# Example environment variables for running the app with docker-compose
# Copy this file to .env and fill the real values (DO NOT COMMIT .env)

# Flask
FLASK_ENV=production
FLASK_APP=run.py
SECRET_KEY=change-me-in-production
JWT_SECRET_KEY=change-me-in-production

# Database: either set DATABASE_URL directly or set DB_* pieces
# Example using MariaDB/MySQL (SQLAlchemy + pymysql dialect)
# DATABASE_URL=mysql+pymysql://<user>:<password>@<host>:3306/<database_name>
# Or set the components below:
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=EventosTec
DATABASE_URL=mysql+pymysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:3306/${DB_NAME}
ENABLE_SQIDS=True
PUBLIC_CONFIRM_WINDOW_DAYS=20

# Application timezone for interpreting naive datetimes from database
# This should match the timezone where users create activities
# Default: America/Mexico_City (UTC-6 in winter, UTC-5 in summer/DST)
APP_TIMEZONE=America/Mexico_City

# Public pause/resume window configuration
# Seconds after activity start when the public pause view becomes available (default: 0 = immediately)
PUBLIC_PAUSE_AVAILABLE_FROM_SECONDS=0
# Minutes after activity end that the public pause view remains available (default: 5)
PUBLIC_PAUSE_AVAILABLE_UNTIL_AFTER_END_MINUTES=5
